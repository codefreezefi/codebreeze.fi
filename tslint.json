{
  "extends": "@nrfcloud/tslint-config",
  "rules": {
    "semicolon": [
      true,
      "never"
    ],
    "indent": [
      true,
      "tabs"
    ],
    "trailing-comma": [
      true,
      {
        "singleline": "never",
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "always",
          "typeLiterals": "ignore"
        }
      }
    ]
  }
}
